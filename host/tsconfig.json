{
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "es5",
            "DOM",
            "ES2015"
        ],
        "module": "none",
        "jsx": "preserve",
        "target": "es3",
        "outFile": "../build/index.jsx",
        "removeComments": true,
        "skipLibCheck": true,
        "noImplicitUseStrict": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./**/*"
    ],
}